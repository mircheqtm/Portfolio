---
import {Image} from "astro:assets";
import olalastore from "../../public/projects/olalastore.png";
import bloom from "../../public/projects/bloom.png";
import partsi from "../../public/projects/partsi.jpg";
import bp from "../../public/projects/bp.png";
import {ImageMetadata} from "astro";

interface Project {
    title: string;
    image: ImageMetadata;
    preview: string;
    status: string;
    stack: string[];
}

const projects: Project[] = [
    {
        title: "Partsi â€” car parts search service",
        image: partsi as ImageMetadata,
        preview: null,
        status: "In development",
        stack: ["Java 21", "Spring Modulith", "Postgres", "NextJs", "Grafana + Prometheus"]
    },
    {
        title: "Ola la store",
        image: olalastore as ImageMetadata,
        preview: "https://olalastore.ru",
        status: "Finished",
        stack: ["Astro+React", "React", "Strapi", "Docker"]
    },
    {
        title: "Bloom Design",
        image: bloom as ImageMetadata,
        preview: "https://bloom-design.ru",
        status: "Finished",
        stack: ["Astro", "Docker"]
    },
    {
        title: "Debugging API for semantic pipelines",
        image: bp as ImageMetadata,
        preview: "https://dspace.cvut.cz/handle/10467/108706?locale-attribute=en",
        status: "Bachelor Thesis - Finished",
        stack: ["Java", "RDF", "Linked Data", "SPARQL", "Docker", "SPipes"]
    },
];
---

<section
        id="projects"
        class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
    <div class="max-w-5xl mx-auto">
        <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My solo work</h2>
        <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {
                projects.map((project) => (
                        <div class="group">
                            <a
                                    href={project.preview}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="block"
                            >
                                <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                                    <Image
                                            src={project.image}
                                            alt={project.title}
                                            class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                                    />
                                </div>
                                <div class="flex items-center px-3 mb-5">
                                    <div class="flex-grow">
                                        <h4 class="text-2xl font-semibold">{project.title}</h4>
                                        <span class="py-1 text-sm text-[var(--sec-light)]">
                                                {project.status}
                                            </span>
                                    </div>
                                    {project.preview && (<div class="flex gap-2 ml-auto">
                                        <a
                                                target="_blank"
                                                href={project.preview}
                                                aria-label="Preview"
                                                class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                                        >
                                            <svg
                                                    xmlns="http://www.w3.org/2000/svg"
                                                    viewBox="0 0 24 24"
                                                    fill="currentColor"
                                                    class="size-7"
                                            >
                                                <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z"/>
                                            </svg>
                                        </a>
                                    </div>)}

                                </div>
                                <div class="flex flex-row flex-wrap gap-2">
                                    {project.stack.map((tech, i) => (
                                            <span
                                                    class="
                                                text-sm
                                                text-[var(--white-icon)]
                                                hover:text-white
                                                transition duration-300 ease-in-out
                                                border border-[var(--white-icon-tr)]
                                                py-2 px-3
                                                rounded-xl
                                                bg-[#1414149c]
                                                hover:bg-[var(--white-icon-tr)]"
                                            >
                                              {tech}
                                            </span>
                                    ))}
                                </div>
                            </a>
                        </div>
                ))
            }
        </div>
    </div>
</section>
